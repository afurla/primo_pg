<% provide(:title, "Sign up") %>
<h1>Sign up page</h1>
<div class="row">
	<div class="sman6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.label :email %>
			<%= f.text_field :email %>
			<%= f.label :password %>
			<%= f.password_field :password %>
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>

			<%= f.submit "Iscrivimi adesso ", class: "btn btn-large btn primary" %>
		<% end %>
	</div>
</div>

<p>This is the page to become member. Registrati qui</p>
